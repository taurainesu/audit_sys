<script type="text/javascript">
$("#minutesForm").submit(function(event){
    event.preventDefault();
 // Get some values from elements on the page:
  var form = $(this);
  var formData=form.serialize();

 $.ajax({
        url: form.attr("data-post-url"),
        data:formData ,
        type: 'post',
        dataType: 'json',
        success: function (data) {
          $('#minutesForm').trigger("reset");
$('#myTable tr:last').after
('<tr><td>'+data['date']+'</td> <td>'+data['meetingType']+'</td><td>'+data['agenda']+'</td><td>'+data['followUp']+'</td></tr>');

  $("#confirmButton").attr("hidden",false);

          
          },

          error:function(){
          alert('error in request');
        },

        complete:function(){
              console.log("complete");
            }
      });


  });
</script>




<script type="text/javascript">
$("#updateMinuteForm").submit(function(event){
  $('#updateModal').modal('hide');
    event.preventDefault();
 // Get some values from elements on the page:
  var form = $(this);
  var formData=form.serialize();

 $.ajax({
        url: form.attr("data-post-url"),
        data:formData ,
        type: 'post',
        dataType: 'json',
        success: function (data) {
            var minuteId=data['minuteId'];
            var update=data['updateMinute'];
            var myHtml='<p>'+update+'</p>';
            $('.'+minuteId).after(myHtml);
            $("#updateMinute").val("");
},

          error:function(){
          alert('error in request');
        },

        complete:function(){
              console.log("complete");
            }
      });


  });
</script>

     






